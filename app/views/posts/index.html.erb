<main class="container">
  <div class="header">
    <h1>Posts</h1>

    <%= link_to "Add New post",
                new_post_path,
                data: { turbo_frame: dom_id(Post.new) },
                class: "btn btn-outline-primary btn-sm" %>
  </div>

  <%= turbo_frame_tag Post.new %>
  
  <%= turbo_frame_tag "posts" do %>
    <%= render @posts %>
  <% end %>
</main>